#ifndef ENTITY_CONFIG_H
#define ENTITY_CONFIG_H

#include <boost/config.hpp>
#include <boost/config/warning_disable.hpp>

namespace entity {

const int VersionMajor = @ENTITY_VERSION_MAJOR@;
const int VersionMinor = @ENTITY_VERSION_MINOR@;
const int VersionPatch = @ENTITY_VERSION_PATCH@;
char const* const VersionString = "@ENTITY_VERSION_STRING@";

}

// Variadic support currently not working correctly
// on gcc 4.8 and lower.
#if defined(__GNUC__) && __GNUC__  <= 4
#  if __GNUC_MINOR__ <= 8
#    define ENTITY_SUPPORT_VARIADICS 0
#  endif
#endif

#ifndef ENTITY_SUPPORT_VARIADICS
#  ifndef BOOST_NO_CXX11_VARIADICS
#    define ENTITY_SUPPORT_VARIADICS 1
#  else
#    define ENTITY_SUPPORT_VARIADICS 0
#  endif
#endif

#endif // ENTITY_CONFIG_H